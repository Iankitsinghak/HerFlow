
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    
    // Check if user is logged in
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user accessing the data owns it (for /users/ path)
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if the user is the author of the post (stored as authorId)
    function isAuthor() {
      return isSignedIn() && request.auth.uid == resource.data.authorId;
    }
    
    function isCommentAuthor() {
        return isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    // --- USER DATA RULES ---

    match /users/{userId}/{path=**} {
        allow read, write: if isOwner(userId);
    }
    
    // --- COMMUNITY POSTS RULES ---

    match /communityPosts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAuthor();
      allow delete: if isAuthor();

      // --- COMMENTS SUBCOLLECTION ---
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update: if isCommentAuthor();
        allow delete: if isCommentAuthor();
      }
    }

    // --- TAGS RULES ---
    
    match /tags/{tagId} {
      allow read: if true;
      allow write: if false; // Only admin via backend can change tags
    }
  }
}
