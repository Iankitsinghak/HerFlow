
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    
    // Check if user is logged in
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user accessing the data owns it (for /users/ path)
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if the user is the author of the post (stored as authorId)
    function isAuthor() {
      return isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    // --- USER DATA RULES ---

    match /users/{userId}/{path=**} {
        allow read, write: if isOwner(userId);
    }
    
    // --- COMMUNITY POSTS RULES ---

    match /communityPosts/{postId} {
      // 1. Anyone can read
      allow read: if true;
      
      // 2. Only logged in users can create. 
      // We ensure they set themselves as the author.
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;

      // 3. Only the author can update their own post. No one else can.
      allow update: if isAuthor();
      
      // 4. Only author can delete
      allow delete: if isAuthor();

      // --- COMMENTS SUBCOLLECTION ---
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
      }
    }

    // --- TAGS RULES ---
    
    match /tags/{tagId} {
      allow read: if true;
      allow write: if false; // Only admin via backend can change tags
    }
  }
}
